@model AccountManager.Models.AccountHolders

 
@{
    ViewBag.Title = "Are you sure you want to delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}

@Html.StarkAjaxFormSubmiter("frmInvoice", "tbInvoice", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title

            </h1>
        </section>
    }
}


<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Account Holders</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">

                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>Payment Date</td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <td>Installment Date</td>
                                    <td>@Html.DisplayFor(model => model.AccountNoFromRegister)</td>
                                </tr>


                                <tr>
                                    <td>Transaction ID</td>
                                    <td>@Html.DisplayFor(model => model.Address)</td>
                                </tr>
                                <tr>
                                    <td>Account ID</td>
                                    <td>@Html.DisplayFor(model => model.EngineNo)</td>
                                </tr>

                                <tr>
                                    <td>Installment No</td>
                                    <td>@Html.DisplayFor(model => model.LoanAdvance)</td>
                                </tr>
                            </table>
                            <div class="box-footer">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" class="btn btn-default" /> |
                                        @Html.ActionLink("Back to List", "Index")
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
