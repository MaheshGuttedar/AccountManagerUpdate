@model AccountManager.Models.Product

@{
    ViewBag.Title = "Edit";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}

<script src="~/Content/ckeditor/ckeditor.js"></script>

@Html.StarkAjaxFormSubmiter("frmProduct", "tbProduct", true, "Action Successfully Executed")

 
@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                <small>@ViewBag.Title</small>
            </h1>
        </section>
    }
}

<script type="text/javascript">
        $(function () { 
            $('select').searchableOptionList({
                maxHeight: '250px'
            });
        });
</script>

@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data",id = "frmProduct"  }))
{
    @Html.AntiForgeryToken()

        <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Edit Product</h3>
                    </div> 
                    <!-- form start -->
  
                    <div role="form">
                        <div class="box-body">
                              

                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, new { @class = "" })
                                @Html.EditorFor(model => model.Name)  
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PurchaseCost, new { @class = "" })
                                @Html.EditorFor(model => model.PurchaseCost)  
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.SalePrice, new { @class = "" })
                                @Html.EditorFor(model => model.SalePrice)  
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.OfficeId, new { @class = "" })
                                @Html.DropDownList("OfficeId"," -Select- ") 
                                @Html.StarkDropDownAjaxLink("/CompanyOffice/Create", "AddMore","")
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.IsActive, new { @class = "" })
                                @Html.EditorFor(model => model.IsActive)  
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ProductImage, new { @class = "" })
                                <input id="ProductImage" name="ProductImage" type="file" />
                                <input type="hidden" name="HideImage1" value="@Model.ProductImage" /> 
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.BareCode, new { @class = "" })
                                @Html.EditorFor(model => model.BareCode)  
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, new { @class = "" })
                                @Html.TextAreaFor(model => model.Description, new { @class = "ckeditor" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ReOrderValue, new { @class = "" })
                                @Html.EditorFor(model => model.ReOrderValue)  
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Stock, new { @class = "" })
                                @Html.EditorFor(model => model.Stock)  
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.MinStockValue, new { @class = "" })
                                @Html.EditorFor(model => model.MinStockValue)  
                            </div>


                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            @Html.StarkInputButtion("Save","submit","btn btn-primary","") 
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}


